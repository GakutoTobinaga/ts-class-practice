{
    "compilerOptions": {
      "target": "ES2020",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "rootDir": "./src",
      "outDir": "./dist",           // コンパイル後のファイルを出力するディレクトリを指定
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "lib": ["ES2015","DOM"],
      "allowImportingTsExtensions": true,
      "noEmit": true,
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }
  